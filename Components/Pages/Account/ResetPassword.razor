@page "/resetpassword"
@inject IStringLocalizer<ResetPassword> Loc

<ArchibasePageTitle Title=@Loc["Reset password"] />

<RadzenText TextStyle="TextStyle.H4">@Loc["Reset password"]</RadzenText>

<RadzenTemplateForm TItem="Registration" Data="model">
    <RadzenText>
        Enter your email address you have specified, and the password reset link will be sent there.
    </RadzenText>
    <RadzenFormField Text=@Loc["Email address"]>
        <RadzenTextBox Name="Email" @bind-Value=@model.Email />
        <RadzenEmailValidator Component="Email" Text=@Loc["Please enter valid email address"] />
    </RadzenFormField>
    <RadzenFormField>
        <RadzenButton ButtonType="ButtonType.Submit" Text=@Loc["Reset password"] />
    </RadzenFormField>
</RadzenTemplateForm>

@code
{
    class Registration
    {
        public string Email { get; set; }
    }

    Registration model = new();
}