@inject IStringLocalizer<LoadingScreen> Loc

@if (Loaded)
{
    <RadzenColumn Size="12">
    @ChildContent
</RadzenColumn>
}
else
{
    <RadzenText>@Loc["Loading..."]</RadzenText>
    <RadzenProgressBarCircular ProgressBarStyle="ProgressBarStyle.Primary" Value="100" ShowValue="false"
        Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Small" />
}

@code
{
    [Parameter]
    public bool Loaded { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}